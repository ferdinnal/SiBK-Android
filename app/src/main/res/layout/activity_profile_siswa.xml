<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kelompok"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:openDrawer="start">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="55dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_web_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Detail Profile"
                        android:textColor="@color/putih"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:background="@android:color/transparent"
        app:srlAccentColor="@color/putih"
        app:srlPrimaryColor="@color/colorPrimaryDark">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/putih"
                android:orientation="vertical">

                <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/spinKit"
                    style="@style/SpinKitView.Large"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:SpinKit_Color="@color/colorPrimaryDark"
                    app:SpinKit_Style="Wave" />

                <LinearLayout
                    android:id="@+id/llTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinKit"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/abu_muda">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/curve_background"
                            android:orientation="vertical"
                            android:padding="7dp">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/iv_profile"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                app:placeholderImage="@drawable/no_data_bg_abu_muda"
                                app:roundAsCircle="true"
                                app:roundingBorderColor="@color/putih"
                                app:roundingBorderWidth="1px" />

                            <TextView
                                android:id="@+id/tv_fullname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:text="Siswa"
                                android:textColor="@color/putih"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvKelas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:text="X TKJ"
                                android:textColor="@color/putih"
                                android:textSize="18dp" />
                        </LinearLayout>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_at"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="-"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:id="@+id/ivEditEmail"
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_edit_white_18"
                                    android:tint="@color/colorPrimaryDark" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_phone_call"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="-"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:id="@+id/ivEditPhone"
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_edit_white_18"
                                    android:tint="@color/colorPrimaryDark" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_phone_call"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/tvPhoneOrtu"
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="-"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:id="@+id/ivEditPhoneOrtu"
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_edit_white_18"
                                    android:tint="@color/colorPrimaryDark" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_id_card"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/tvNisn"
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="-"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:visibility="invisible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_address"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/tvAddress"
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="-"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:visibility="invisible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_warning_new"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/tvPoint"
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="-"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:visibility="invisible" />

                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="7dp"
                                android:background="@color/colorPrimaryDark" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_padlock"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="Edit Password"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:id="@+id/ivEditPassword"
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_edit_white_18"
                                    android:tint="@color/colorPrimaryDark" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llHistoryPelanggaran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_baseline_history_24"
                                    android:tint="@color/colorPrimaryDark" />

                                <TextView
                                    android:layout_width="0px"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:padding="10dp"
                                    android:text="Riwayat Pelanggaran"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:layout_width="0px"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/ic_baseline_chevron_right_24"
                                    android:tint="@color/colorPrimaryDark" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>
